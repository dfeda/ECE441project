<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="LOG OUT"
        tools:layout_editor_absoluteX="627dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="715dp"
        android:layout_height="48dp"
        android:backgroundTint="#9C27B0"
        android:text="Switch to Controlled"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="53dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="433dp"
        android:layout_height="210dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="101dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="639dp"
        android:layout_height="42dp"
        android:backgroundTint="#FFC107"
        android:text="Sensor detected object"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="353dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        app:srcCompat="@android:drawable/ic_lock_idle_low_battery"
        tools:layout_editor_absoluteX="615dp"
        tools:layout_editor_absoluteY="266dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="10dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="               Live view"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="310dp" />
</android.support.constraint.ConstraintLayout>